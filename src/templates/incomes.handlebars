<div class="mb-8">
  <div class="flex items-center -mx-1">
    <div class="flex-1 px-1 uppercase text-white" id="name_label_{{index}}">{{name}}</div>
    <div class="flex-none px-1 mb-1 w-2/5 lg:w-1/3 mr-6 flex justify-end">
      <span class="cursor-pointer hint--top hint--medium hint--rounded" data-hint="The sum of your wages and salary, before any taxes or deductions are taken out."><span id="amount_label_{{index}}" class="label border-b border-dotted no-underline leading-none text-right block">Gross wages</span></span>
    </div>
  </div>
  <div class="flex items-center -mx-1">
    <div class="flex-1 px-1" aria-hidden="true">
      <input type="range" name="amount" value="{{amount}}" min="0" max="250000" step="500" class="input-range text-white w-full">
    </div>
    <div class="flex-none items-center w-2/5 lg:w-1/3 mr-6 px-1 flex items-center">
      <div class="bg-grey-light p-3 rounded-tl rounded-bl shadow leading-tight">$</div>
      <input class="input flex-1 rounded-l-none rounded-r leading-tight" type="tel" name="amount" value="{{amount}}" data-type="currency" maxlength="20" aria-labelledby="amount_label_{{index}} name_label_{{index}}">
    </div>
  </div>
</div>
