{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "document": true,
    "localStorage": true,
    "window": true
  },
  "plugins": [
    "import"
  ],
  "rules": {
    "global-require": 0,
    "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTernary": true }],
    "no-use-before-define": ["error", { "functions": false }],
    "no-restricted-syntax": ["error", "ForInStatement", "LabeledStatement", "WithStatement"]
  }
}
